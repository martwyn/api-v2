{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "target": "ES2022",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": [
      "ES7",
      "DOM"
    ],
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}